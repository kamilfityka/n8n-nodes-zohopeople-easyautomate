{
  "name": "n8n-nodes-zohopeople-easyautomate",
  "version": "0.0.12",
  "description": "n8n node module for https://www.zoho.com/people/ by https://easyautomate.pl",
  "keywords": [
    "n8n-community-node-package",
    "n8n-node-athon",
    "zoho",
    "zoho-people",
    "hr",
    "workflow"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "author": {
    "name": "Kamil Fityka",
    "email": "kamil.fityka@easyautomate.pl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamilfityka/n8n-nodes-zohopeople-easyautomate"
  },
  "homepage": "https://github.com/kamilfityka/n8n-nodes-zohopeople-easyautomate",
  "main": "index.js",
  "scripts": {
    "build": "tsc && gulp",
    "dev": "npm run watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials",
    "lintfix": "eslint nodes credentials --fix",
    "prepublishOnly": "npm run build && npm run lint",
    "watch": "tsc --watch",
    "test": "jest"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/ZohoPeopleOAuth2Api.credentials.js"
    ],
    "nodes": [
      "dist/nodes/ZohoPeople/ZohoPeople.node.js"
    ]
  },
  "devDependencies": {
    "@sentry/node": "^10.19.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.19.25",
    "@typescript-eslint/parser": "^7.18.0",
    "axios": "^1.12.2",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^5.0.0",
    "jest": "^29.7.0",
    "n8n-workflow": "^1.73.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "engines": {
    "node": ">=20.19"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
