{
	"compilerOptions": {
		"lib": [
			"es2017",
			"es2019.array",
			"es2020"
		],
		"types": [
			"node",
			"jest"
		],
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"strictNullChecks": true,
		"strict": true,
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"declaration": true,
		"outDir": "./dist/",
		"target": "es2020",
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"credentials/**/*",
		"nodes/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts",
		"test"
	]
}
